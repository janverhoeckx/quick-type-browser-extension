{
  "manifest_version": 2,
  "name": "quick-type-browser-extension",
  "short_name": "quick-type-browser-extension",
  "version": "1.0.0",
  "permissions": [
    "storage"
  ],
  "browser_action": {
    "default_popup": "index.html?#/popup",
    "default_title": "Angular Chrome Extension"
  },
  "options_page": "index.html?#/options",
  "content_scripts": [
    {
      "js": [
        "contentPage.js"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ],
  "background": {
    "scripts": [
      "backgroundPage.js"
    ],
    "persistent": false
  },
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}
